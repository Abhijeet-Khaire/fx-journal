rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/traders/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Top-level matching for traders collection
    match /traders/{userId} {
      // Allow user to read/write their own document or if they are an admin
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());

      // Allow recursive access to all subcollections under the user's document
      match /{document=**} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
